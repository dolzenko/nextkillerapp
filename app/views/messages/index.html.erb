<div>
	<p>
		<% link_to(new_message_path, :class => "btn primary") do %>
			<span><span>New</span></span>
		<% end %>
	</p>

	<table id="mainlist" cellpadding="0" cellspacing="0">
		<% @messages.each do |message| %>
			<tr>
				<td><%= wrap_in_edit_link(message, h(message.email)) %></td>
				<td><%= wrap_in_edit_link(message, truncate(h(message.subject), :length => 40)) %></td>
				<td><%= wrap_in_edit_link(message, truncate(h(message.body), :length => 100)) %></td>
				<td></td>
			</tr>
		<% end %>
	</table>
</div>